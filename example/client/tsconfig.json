{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"lib": [
			"ES6"
		],
		"moduleResolution": "node",
		"module": "CommonJS",
		"target": "ES6",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/ui-server/static/js/index.js"
	]
}